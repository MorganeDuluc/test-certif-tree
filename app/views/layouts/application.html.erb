<!DOCTYPE html>
<html>
  <head>
    <title>Airbntree</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <%= image_tag "https://source.unsplash.com/boE2xft0cAo/400x400", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "my account", "#", class: "dropdown-item" %>
              <%= link_to "trees", "#", class: "dropdown-item" %>
              <%= link_to "home", root_path, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      </div>
      <div class="d-flex text-right">
        <%= link_to "Login", "#", class: "btn-ghost" %>
      </div>


    </div>

    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
