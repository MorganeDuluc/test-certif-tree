<div class="bookings-of-user">
  <% bookings.each do |booking| %>
    <div class="card-product">
      <%= cl_image_tag booking.tree.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-booking-infos">
        <h2> <%= booking.tree.name %></h2>
        <p> <%= booking.tree.localisation %> </p>
        <p> <%= booking.tree.price %> </p>
        <div class="right">
          <p> <%= booking.status %> </p>
        </div>
        <div class="link">
          <%= link_to edit_booking_path(booking) do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to booking_path(booking),
          method: :delete,
          data: { confirm: "Etes vous sÃ»r ?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
