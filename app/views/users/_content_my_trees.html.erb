<div class="trees-of-user">
  <% trees.each do |tree| %>
    <div class="card-product">
      <%= cl_image_tag tree.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-tree-infos">
        <h2> <%= tree.name %></h2>
        <p> <%= tree.localisation %> </p>
        <p> <strong><%= tree.price %></strong> </p>
        <p> <%#= tree.booking.status %> </p>
        <div class="link">
          <%= link_to edit_tree_path(tree) do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to tree_path(tree),
          method: :delete,
          data: { confirm: "Etes vous sÃ»r ?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
