<div class="container" id="grid-user">
  <div>
    <div class="product">
      <%= cl_image_tag @tree.photo.key, height: 300, width: 400, crop: :fill %>
      <h3><%= @tree.name %></h3>
      <p> <%= @tree.description %> </p>
      <p> <strong><%= @tree.price %></strong></p>
      <p> <%= @tree.localisation %> </p>

      <div class="btn-submit">
        <% if @current_user.nil? %>
        <%= link_to "Réserver cet arbre", new_user_session_path %>
        <% else %>
        <%= link_to "Réserver cet arbre", new_tree_booking_path(@tree) %>
        <% end %>
      </div>
    </div>

    <div>
      <%= link_to trees_path do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
    </div>
  </div>
  <div></div>

  <div id="map"
      style="width: 150%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
